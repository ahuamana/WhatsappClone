<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <LinearLayout
        android:id="@+id/linearLayoutMessage_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bubble_corner_left"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/textViewMessage_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuevo mensaje ..."
            android:textSize="15dp"
            android:layout_marginRight="15dp"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/imageViewMessage_message"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:layout_marginRight="15dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right|center_vertical">

            <LinearLayout
                android:id="@+id/linearLayoutDocument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@drawable/ic_file_gray"/>
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="5dp"
                    android:textSize="12dp"
                    android:text="Documento"/>

            </LinearLayout>

            <TextView
                android:id="@+id/textViewDate_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4:00 PM"
                android:textSize="10dp"
                android:textColor="@color/colorGray"/>

            <ImageView
                android:id="@+id/imageViewCheck_message"
                android:layout_width="35dp"
                android:layout_height="15dp"
                android:src="@drawable/icon_double_check_gray"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>